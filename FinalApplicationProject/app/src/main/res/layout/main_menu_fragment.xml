<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.google.android.material.button.MaterialButton
        android:id="@+id/quick_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hexagon"
        android:text="Quick Start"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/custom_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/hexagon"
        android:text="Custom Game"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leaderboard_scores"

        app:layout_constraintTop_toBottomOf="@+id/quick_start_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaderboard_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hexagon"
        android:text="Leaderboard"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toEndOf="@+id/custom_game_button"
        app:layout_constraintTop_toBottomOf="@+id/quick_start_button" />

</androidx.constraintlayout.widget.ConstraintLayout>